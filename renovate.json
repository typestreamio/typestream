{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependencies"],
  "prConcurrentLimit": 0,
  "branchConcurrentLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Elasticsearch Docker images in docker-compose files",
      "fileMatch": ["(^|/)docker-compose[^/]*\\.ya?ml$"],
      "matchStrings": [
        "image:\\s*(?<depName>docker\\.elastic\\.co/elasticsearch/elasticsearch):(?<currentValue>[^\\s\"'\\n]+)"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
