{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependencies"],
  "prConcurrentLimit": 0,
  "branchConcurrentLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "matchPackageNames": ["react", "react-dom", "@types/react", "@types/react-dom"],
      "groupName": "react"
    },
    {
      "matchPackageNames": ["typescript"],
      "groupName": "typescript"
    },
    {
      "matchPackageNames": ["vite", "@vitejs/plugin-react"],
      "groupName": "vite"
    },
    {
      "matchPackageNames": ["sass"],
      "groupName": "sass"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Elasticsearch Docker images in docker-compose files",
      "fileMatch": ["(^|/)docker-compose[^/]*\\.ya?ml$"],
      "matchStrings": [
        "image:\\s*(?<depName>docker\\.elastic\\.co/elasticsearch/elasticsearch):(?<currentValue>[^\\s\"'\\n]+)"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
